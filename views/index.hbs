<div class="container">
    <div class="section mt-5">
        <div class="d-flex justify-content-center">
            <a href="/compose">
                <button class="compose-btn">COMPOSE</button></a>
        </div>
    </div>

    <div class="section mt-5">
        <div class="row">

            {{#each diary}}
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.date}}</h5>
                        <p class="card-text">{{this.content}}</p>
                        <a href="#" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>