<div class="container">
    <div class="section mt-5">
        <div class="d-flex justify-content-center">
            <a href="/compose">
                <button class="compose-btn">COMPOSE</button></a>
        </div>
    </div>

    <div class="section">
        {{#if data.diary}}
        <div class="row">

            {{#each data.diary}}
            <div class="col-sm-4 mt-4">
                <div class="card border-3 rounded border-secondary">
                    <div class="card-body">
                        <h5 class="card-title">{{this.date}}</h5>
                        <hr>
                        <p class="card-text">{{this.limitContent}}...</p>
                        <a href="/view/{{this._id}}" class="btn view-btn w-100">View</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        {{else}}
        <div class="h3 text-center domine mt-3">No diaries yet!</div>
        {{/if}}
    </div>
</div>